{
  "name": "devto-cli",
  "version": "0.0.0",
  "description": "Authoring CLI to publish markdown files on dev.to platform, using assets hosted on GitHub.",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/devto-cli.git"
  },
  "private": true,
  "main": "devto-cli.js",
  "bin": {
    "devto": "./bin/devto.js"
  },
  "scripts": {
    "start": "node index.js",
    "start:dev": "node --inspect-brk=9229 -r ts-node/register index.ts",
    "build": "tsc",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "xo && jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf *.js *.d.ts *.tgz",
    "commit": "git-cz",
    "release:check": "npm run release -s -- --dry-run"
  },
  "keywords": [
    "cli",
    "authoring",
    "dev.to",
    "publish",
    "markdown",
    "assets",
    "articles",
    "sync"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/devto-cli",
  "bugs": {
    "url": "https://github.com/sinedied/devto-cli/issues"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "execa": "^4.0.0",
    "find-up": "^4.1.0",
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "got": "^11.0.2",
    "gray-matter": "^4.0.2",
    "hasbin": "^1.2.3",
    "minimist": "^1.2.5",
    "ora": "^4.0.4",
    "p-map": "^4.0.0",
    "p-throttle": "^3.1.0",
    "slugify": "^1.4.0",
    "table": "^5.4.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@jedmao/semantic-release-npm-github-config": "^1.0.9",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "semantic-release": "^17.0.7",
    "xo": "^0.30.0"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ],
    "rules": {
      "camelcase": [
        "error",
        {
          "allow": [
            "body_markdown",
            "cover_image",
            "published_at",
            "canonical_url",
            "per_page"
          ]
        }
      ],
      "unicorn/no-fn-reference-in-iterator": "off"
    },
    "ignores": [
      "test/mocks/**/*"
    ]
  },
  "prettier": {
    "bracketSpacing": true
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js",
      "lib/**/*.js"
    ],
    "verbose": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@jedmao/semantic-release-npm-github-config",
    "tagFormat": "${version}",
    "branch": "master"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "files": [
    "bin",
    "lib",
    "template",
    "devto-cli.js"
  ]
}
